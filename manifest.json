{
  "manifest_version": 3,
  "name": "Robotcorder",
  "version": "0.4.0",
  "homepage_url": "https://github.com/tekjanson/Robotcorder",
  "description": "A Robot that records user action and scans the page to generate RobotFramework test scripts (beta)",
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:1234 http://127.0.0.1:1234; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background-sw.js"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "./src/logger.js",
      "./src/locator/xpath-locator.js",
      "./src/locator/tree-builder.js",
      "./src/locator/classifier.js",
      "./src/locator/scanner.js",
      "./src/content.js"
    ],
    "run_at": "document_end",
    "all_frames": true
  }],
  "web_accessible_resources": [
    {
      "resources": ["src/pom.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": "assets/icon-stop.png",
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "assets/logo-16.png",
    "32": "assets/logo-32.png",
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },
  "permissions": ["activeTab", "downloads", "storage"],
  "host_permissions": ["<all_urls>"]
}
